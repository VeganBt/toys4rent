<div class="container pt-3">
  <div class="row justify-content-center ">
    <h2 class="text-center pb-2">Update details of your toy</h2>

    <div class="col-12 col-md-6 col-lg-6">
      <%= simple_form_for(@toy) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :category, collection: Toy::CATEGORIES, include_blank: false %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Update Toy", class: "btn btn-success text-center" %>
      <% end %>
    </div>
  </div>
</div>
